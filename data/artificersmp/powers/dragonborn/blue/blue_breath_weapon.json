{
    "name": "Breath Weapon",
    "description": "You have the ability to exhale destructive lightning energy. The amount you can exhale slowly recharges when you are not exhaling.",
    "type": "origins:multiple",
    "breath": {
        "type": "origins:resource",
        "min": 0,
        "max": 80,
        "start_value": 80,
        "hud_render": {
            "sprite_location": "origins:textures/gui/resource_bar.png",
            "bar_index": 2,
            "should_render": true
        }
    },
    "refill": {
        "type": "origins:action_over_time",
        "interval": 15,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "artificersmp:dragonborn/blue/blue_breath_weapon_breath",
            "operation": "add",
            "change": 1
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:sprinting",
                    "inverted": true
                },
                {
                    "type": "origins:on_block"
                }
            ]
        }
    },
    "long_rest": {
        "type": "origins:action_on_wake_up",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "artificersmp:dragonborn/blue/blue_breath_weapon_breath",
            "operation": "set",
            "change": 80
        }
    },
    "breath_out": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "artificersmp:dragonborn/blue/blue_breath_weapon_breath",
                "comparison": ">",
                "compare_to": 1
            },
            "if_action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:change_resource",
                        "resource": "artificersmp:dragonborn/blue/blue_breath_weapon_breath",
                        "operation": "add",
                        "change": -1
                    },
                    {
                        "type": "origins:play_sound",
                        "sound": "minecraft:entity.bee.hurt",
                        "pitch": 0.3,
                        "volume": 1.0
                    },
                    {
                        "type": "origins:play_sound",
                        "sound": "minecraft:entity.player.hurt_freeze",
                        "pitch": 1.7,
                        "volume": 1.0
                    }
                ]
            },
            "else_action": {
                "type": "origins:change_resource",
                "resource": "artificersmp:dragonborn/blue/blue_breath_weapon_breath",
                "operation": "add",
                "change": -1
            }
        },
        "key": {
            "key": "key.origins.primary_active",
            "continuous": true
        }
    },
    "sparks": {
        "type": "origins:active_self",
        "condition": {
            "type": "origins:resource",
            "resource": "artificersmp:dragonborn/blue/blue_breath_weapon_breath",
            "comparison": ">",
            "compare_to": 1
        },
        "entity_action": {
            "type": "origins:area_of_effect",
            "shape": "cube",
            "radius": 10,
            "bientity_action": {
                "type": "origins:damage",
                "amount": 5,
                "damage_type": "minecraft:lightning_bolt"
            },
            "bientity_condition": {
                "type": "origins:target_condition",
                "condition": {
                    "type": "origins:raycast",
                    "entity": true,
                    "entity_distance": 10,
                    "shape_type": "collider"
                }
            }
        },
        "key": {
            "key": "key.origins.primary_active",
            "continuous": true
        }
    }
}