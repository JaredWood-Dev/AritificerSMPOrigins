{
    "name": "Giant Legacy",
    "description": "You can temporarily grow in size to match the giants that came before you.",
    "type": "origins:activate_self",
    "entity_action":
    {
        "type": "origins:action_on_callback",
	    "entity_action_chosen":
	    {
		    "type": "origins:and",
		    "actions": [
			    {
				    "type": "origins:execute_command",
				    "permission_level": 4,
				    "command": "scale set pehkui:height 1.5 @s"
                },
                {
                    "type": "origins:execute_command",
                    "permission_level": 4,
                    "command": "scale set pehkui:width 1.5 @s"
                }
            ]
        },
        "entity_action_added":
        {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "permission_level": 4,
                    "command": "scale set pehkui:height 1.5 @s"
                },
                {
                    "type": "origins:execute_command",
                    "permission_level": 4,
                    "command": "scale set pehkui:width 1.5 @s"
                }
            ]
        },
        "entity_action_lost":
        {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "permission_level": 4,
                    "command": "scale set pehkui:height 1 @s"
                },
                {
                    "type": "origins:execute_command",
                    "permission_level": 4,
                    "command": "scale set pehkui:width 1 @s"
                },
                {
                    "type": "origins:execute_command",
                    "permission_level": 4,
                    "command": "scale set pehkui:eye_height 1 @s"
                },
                {
                    "type": "origins:execute_command",
                    "permission_level": 4,
                    "command": "scale set pehkui:hitbox_height 1 @s"
                }
            ]
        },
        "entity_action_removed":
        {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "permission_level": 4,
                    "command": "scale set pehkui:height 1 @s"
                },
                {
                    "type": "origins:execute_command",
                    "permission_level": 4,
                    "command": "scale set pehkui:width 1 @s"
                },
                {
                    "type": "origins:execute_command",
                    "permission_level": 4,
                    "command": "scale set pehkui:eye_height 1 @s"
                },
                {
                    "type": "origins:execute_command",
                    "permission_level": 4,
                    "command": "scale set pehkui:hitbox_height 1 @s"
                }
            ]
        }
    },
    "cooldown": 2000,
    "hub_render":
    {
        "should_render": "true"
    }
}